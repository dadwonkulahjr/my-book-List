@page "{id?}"
@model MyBookList.Pages.Admin.BookList.UpsertModel
@{

    ViewData["Title"] = "Create New Book";
}

<br />
<div class="border backgroundWhite shadow">
    <div class="container m-0 p-0 row">
        <div class="col-9">
            @if (Model.Book.Id == 0)
            {
                <h2 class="text-info">
                    <i class="fa fa-plus"></i>&nbsp;Create new book
                </h2>
            }
            else
            {
                <h2 class="text-info">
                    <i class="fa fa-pencil-alt"></i>&nbsp;Edit book
                </h2>
            }
        </div>
        <hr />
        <div class="border container" style="padding:30px;">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post">
                @if (Model.Book.Id != 0)
                {
                    <input asp-for="Book.Id" hidden="hidden" />
                }
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Book.Name"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Book.Name" class="form-control" />
                        <span asp-validation-for="Book.Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Book.Author" class="form-control" />
                        <span asp-validation-for="Book.Author" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Book.ISBN"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Book.ISBN" class="form-control" />
                        <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    @if (Model.Book.Id == 0)
                    {
                        <div class="col-4 offset-2">
                            <button class="btn btn-info form-control">
                                <i class="fa fa-plus-circle"></i>&nbsp;Add
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="col-4 offset-2">
                            <button class="btn btn-info form-control">
                                <i class="fa fa-pencil-alt"></i>&nbsp;Update
                            </button>
                        </div>
                    }
                    <div class="col-4">
                        <a class="btn btn-success form-control text-white"
                           asp-page="list" style="height:auto;">
                            <i class="fa fa-arrow-alt-circle-left"></i>&nbsp;Back to List
                        </a>
                    </div>

                </div>

            </form>


        </div>

    </div>


</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
